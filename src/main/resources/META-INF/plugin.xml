<idea-plugin>
    <id>org.franciscode.moonlight-jetbrains-theme</id>
    <name>Moonlight Theme</name>
    <vendor email="francmarinc@gmail.com" url="https://github.com/francmarin98">Francisco Mar√≠n</vendor>

    <description><![CDATA[
    A friendly dark theme for those long coding sessions.<br>
 <b>
        Inspirations and colors picked from:  </b> <a href="https://marketplace.visualstudio.com/items?itemName=atomiks.moonlight">Moonlight</a>
    <br />
    <br />
    To install:
    <ol>
        <li>Go to <b>Settings | Plugins</b>, find the theme plugin and install it</li>
        <li>Restart the IDE</li>
        <li>Go to <b>Settings | Appearance & Behavior | Appearance</b> and select <b>Moonlight Theme</b> in the theme dropdown</li>
    </ol>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <themeProvider id="francisco-moonlight-theme" path="/moonlight-theme.theme.json" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>